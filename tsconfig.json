{
    "compilerOptions": {
      /* Basic Options */
      "target": "es6",
    
      "watch": true,
      "module": "commonjs",
      "outDir": "./dist",
      /* Strict Type-Checking Options */
      "strict": true,      
      "esModuleInterop": true,
      /* Source Map Options */
      "sourceRoot": "./src",
      "inlineSourceMap": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", ".vscode"]
  }